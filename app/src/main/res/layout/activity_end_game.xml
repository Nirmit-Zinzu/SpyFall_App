<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main"
    tools:context="com.nirmit.spyfall.EndGame">

    <Switch
        android:id="@+id/timerSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scrollView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="34dp"
        android:scaleX="1.3"
        android:scaleY="1.3" />

    <Button
        android:id="@+id/endGameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/round_btn_displayroles"
        android:text="New Game"
        android:textColor="#c4f3ae"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/timerSwitch"
        android:gravity="center"
        android:text=" 8:00 "
        android:textColor="#85d178"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/locationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timerSwitch"
        android:layout_marginTop="10dp"
        android:background="#889ea7"
        android:gravity="center"
        android:padding="3dp"
        android:text="Possible Locations"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/endGameBtn"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timeView"
        android:layout_marginTop="63dp"
        android:background="#202d36">


        <TextView
            android:id="@+id/locationList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/scrollView"
            android:layout_marginLeft="40px"
            android:text=""
            android:textColor="#a2c6bf"
            android:textSize="23sp" />

    </ScrollView>


</RelativeLayout>
